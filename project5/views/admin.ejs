<body style="background-image:url(/images/img1.jpg); min-height:50rem;">
  <div class="head">
    <img id="logo" src="images/cdac logo.jpg" alt="">
    <div class="title">
      <h1> Centre for Development of Advanced Computing Center in North East SILCHAR</h1>
      <h3 style="font-size:30px;"> Public Grievance Redressal System</h3>
  </div>
    <img id="clg" src="/images/WhatsApp Image 2022-12-19 at 3.45.10 PM.jpeg" alt="">
  </div>
  <div class="home">
    <a href="/assigningOfficer/<%= assign.username %>">HOME</a>
    <a href="/about" class="nav"> About</a>
    <a href="/contact" class="nav">Contact Us</a>
    <a href="/verifiedUsers" class="nav">verified</a>
  </div>
  <% if(message.length > 0){ %> 
    <div class="alert alert-success">
      <%= message %> 
    </div>
  <% } %> 
  <div style="display: flex; justify-content: center; margin-top: 2rem;">
      <h3 style="color: aliceblue;">Users to be verified!!</h3>
    </div>
  <div class="cardContainer" >
    <% user.forEach((item)=>{%>
    <% if(item.typeOfPerson==="technician" || item.typeOfPerson==="assigningOfficer"){if(item.verified ==="no"){%>
    <div class="card" style="width: 18rem;">
        <div class="card-body "> 
          <% if(item.adharImg){ %> 
            <img src="/adhar/<%= item.adharImg %>" class="card-img-top" alt="...">
            <a href="/adhar/<%= item.adharImg %>" download="<%= item.firstName %> ">download Adhar</a>
            <% } %>
          <h5 class="card-title"><%= item.firstName %> - ( <%= item.typeOfPerson %>) </h5>
          <p class="card-text">Last name: <%= item.lastName %></p>
          <p class="card-text">Mobile: <%= item.mobile %></p>
          <p class="card-text">Email: <%= item.username %></p>
          <p class="card-text">Adhar Id: <%= item.adharNo %></p>
          <!-- <p class="card-text">Verification Id:</p> -->
          <div style="display: flex; justify-content: space-around;">
            <form action="/verifyByAdmin/<%= item._id %>" method="post">
           <button type="submit" class="btn btn-primary">Verify</button>
         </form>
         <form action="/rejectByAdmin/<%= item._id %>" method="post">
          <button type="submit" class="btn btn-warning">Reject</button>
         </form> 
          </div>
        </div>
      </div>
      <%}} }); %>
    </div>
